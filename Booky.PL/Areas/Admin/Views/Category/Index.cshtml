@using Microsoft.EntityFrameworkCore
@model IEnumerable<Category>
@ViewBag

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class=" btn btn-primary"><i class="bi bi-plus-circle"> Create new category</i></a>
        </div>
    </div>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-bordered border-3 border-dark" id="tblData">
        <thead class="border-2">
        <tr>
            <th>Name Category</th>
            <th>Display Order</th>
            <th>actions</th>
        </tr>
        </thead>
    </table>
}
else
{
    <table class="table table-bordered border-3 border-dark ">
        <thead class="border-2">
        <tr>
            <th>Name Category</th>
            <th>Display Order</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td colspan="2" class="text-center fw-bold">NO Found Category</td>
        </tr>
        </tbody>
    </table> 
}
@section Scripts
{
    <script src="~/js/category.js"></script>
    <script>
    $(document).ready(function(){
        LoadCategories()
    })</script>
}
