@model ResetPasswordViews

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}

<div class="wrapper">
    <h2>Login</h2>
    <form asp-action="SendEmail" method="post">
        <div class="input-box">
            <input asp-for="NewPassword" type="password" placeholder="password" required>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input asp-for="CPassword" type="password" placeholder="Confirm password" required>
            <span asp-validation-for="CPassword" class="text-danger"></span> 
        </div>
        <div class="input-box button">
            <button type="submit" class="btn btn-primary form-control">Reset password</button>
        </div>
    </form>
</div>